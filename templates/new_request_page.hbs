  var contactForm = {{ dc 'hc_contact_form' }};
  var assetIconOther = "{{asset 'icon-other.png'}}";
  var assetIconGettingStarted = "{{asset 'icon-getting-started.png'}}";
  var assetParcelReveivedIcon = "{{asset 'icon-parcel-received.png'}}";
  var assetIconPaying = "{{asset 'icon-paying.png'}}";
  var assetIconReturn = "{{asset 'icon-return.png'}}";
  var assetIconMyAccount = "{{asset 'icon-my-account.png'}}";
  var assetIconCancellation = "{{asset 'icon-cancellation.png'}}";
  var orderPlaceholder = "{{dc 'hc_select_order'}}";
</script>