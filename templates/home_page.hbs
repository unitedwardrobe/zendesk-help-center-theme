<header class="header blue">
  <div class="header-content">
    {{#link "help_center"}}
      <div class="logo header-button">
        <img
          src="{{asset "logo.png"}}"
          alt="{{t "home_page" name=help_center.name}}"
          class="hide-desktop"
        />
        <img
          src="{{asset "logo-horizontal.png"}}"
          alt="{{t "home_page" name=help_center.name}}"
          class="hide-mobile"
        />
      </div>
    {{/link}}
  </div>
  <div class="search">
    <div class="content">
      <h1>{{dc "hc_search_title"}}</h1>
      <p>{{dc "hc_search_subtitle"}}</p>
      {{search submit=true instant=settings.instant_search class="search-form"}}
    </div>
  </div>
</header>
<div class="content promoted-articles">
  <section class="inner-content">
    <h2>{{t "promoted_articles"}}</h2>
    <ul class="list">
      {{#each promoted_articles}}
        <li>
          <a href="{{url}}">
            {{title}}
          </a>
        </li>
      {{/each}}
    </ul>
  </section>
</div>
<ul class="categories">
  {{#each categories}}
    <li class="category-button" data-category-id="{{id}}">{{name}}</li>
  {{/each}}
</ul>
<div class="content">
  {{#each categories}}
    <section class="inner-content category" data-category-id="{{id}}">
      <h2>{{t "topics"}}</h2>
      <ul class="list blocks">
        {{#each sections}}
          <li>
            <a href="{{url}}">
              <div class="block-icon">
                <img
                  src="{{asset id suffix=".png"}}"
                  alt="{{name}}"
                  onerror="this.src='{{asset "360005487959.png"}}'"
                />
              </div>
              <span class="block-title">{{name}}</span>
            </a>
          </li>
        {{/each}}
      </ul>
    </section>
  {{/each}}
</div>